<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="800.0" spacing="5.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.linziniu.controller.TCPClientPage">
   <children>
      <HBox alignment="CENTER_LEFT" maxHeight="30.0" minHeight="30.0" prefHeight="30.0" spacing="5.0" VBox.vgrow="ALWAYS">
         <children>
            <Label maxHeight="30.0" maxWidth="60.0" minHeight="30.0" minWidth="60.0" prefHeight="30.0" prefWidth="60.0" text="IP Address" />
            <TextField fx:id="ip" alignment="CENTER_LEFT" maxHeight="30.0" minHeight="30.0" minWidth="200.0" prefHeight="30.0" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="14.0" />
               </font></TextField>
            <Label maxHeight="30.0" minHeight="30.0" prefHeight="30.0" text="Port" />
            <TextField fx:id="port" alignment="CENTER" maxHeight="30.0" maxWidth="80.0" minHeight="30.0" minWidth="80.0" prefHeight="30.0" prefWidth="80.0" HBox.hgrow="NEVER">
               <font>
                  <Font size="14.0" />
               </font></TextField>
            <Button fx:id="connect" alignment="CENTER" defaultButton="true" maxHeight="30.0" maxWidth="90.0" minHeight="30.0" minWidth="90.0" prefHeight="30.0" prefWidth="90.0" text="Connect" textAlignment="CENTER">
               </Button>
            <Button fx:id="disconnect" maxHeight="30.0" maxWidth="90.0" minHeight="30.0" minWidth="90.0" prefHeight="30.0" prefWidth="90.0" text="Disconnect" textAlignment="CENTER">
               <font>
                  <Font size="14.0" />
               </font></Button>
         </children>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
         <padding>
            <Insets bottom="10.0" top="10.0" />
         </padding>
      </HBox>
      <HBox minWidth="200.0" spacing="5.0" VBox.vgrow="ALWAYS">
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <children>
            <Label maxHeight="30.0" maxWidth="60.0" minHeight="30.0" minWidth="60.0" prefHeight="30.0" prefWidth="60.0" text="Message" />
            <TextArea fx:id="msg" maxHeight="200.0" minHeight="60.0" HBox.hgrow="ALWAYS" />
            <Button fx:id="send" maxHeight="30.0" maxWidth="100.0" minHeight="30.0" minWidth="100.0" prefHeight="30.0" prefWidth="100.0" text="Send" />
         </children>
         <padding>
            <Insets bottom="10.0" top="10.0" />
         </padding>
      </HBox>
      <TableView fx:id="table" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn maxWidth="80.0" minWidth="80.0" text="Status" />
          <TableColumn maxWidth="120.0" minWidth="120.0" prefWidth="120.0" text="Server IP" />
            <TableColumn maxWidth="80.0" minWidth="80.0" text="Server Port" />
            <TableColumn prefWidth="120.0" text="Client IP" />
            <TableColumn prefWidth="100.0" text="Client Port" />
            <TableColumn prefWidth="259.0" text="Received Message" />
        </columns>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
   <padding>
      <Insets left="20.0" right="20.0" top="10.0" />
   </padding>
</VBox>
