               <font>
                  <Font size="14.0" />
               </font></JFXTextField>
            <JFXButton fx:id="connect" alignment="CENTER" buttonType="RAISED" defaultButton="true" maxHeight="30.0" maxWidth="60.0" minHeight="30.0" minWidth="60.0" prefHeight="30.0" prefWidth="60.0" ripplerFill="WHITE" text="连接" textAlignment="CENTER" />
