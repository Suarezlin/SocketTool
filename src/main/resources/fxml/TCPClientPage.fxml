         <VBox.margin>
            <Insets />
         </VBox.margin>
         <children>
            <Label maxHeight="30.0" maxWidth="50.0" minHeight="30.0" minWidth="50.0" prefHeight="30.0" prefWidth="50.0" text="消息" />
            <JFXTextField fx:id="msg" HBox.hgrow="ALWAYS" />
